<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/mainBackground">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTask"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/menuBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/taskNameTitle"
        android:layout_below="@id/toolbarTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TaskName"
        android:textStyle="italic | bold"
        android:textSize="20sp"
        android:textColor="#000000"/>
    <ListView
        android:id="@+id/ListView_tasks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/blank"
        android:dividerHeight="4dp"
        android:animateLayoutChanges="true"
        android:layout_below="@id/taskNameTitle">
    </ListView>
    <Button
        android:id="@+id/task_activity_add_button_todo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_add_button2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>